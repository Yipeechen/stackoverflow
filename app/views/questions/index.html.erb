<div class="container">
  <div class="title">
  <h2 style="float:left;">Top Questions</h2>
  <%= link_to '<i class="fas fa-question-circle"></i> Ask Question'.html_safe, new_question_path, class: "btn btn-info float-right" %>
  </div>
  <div class="clearfix"></div>
  <hr style="margin-top: 0px;">
  <div class="question-list">
    <% @questions.each do |question| %>
    <div class="question">
      <div class="question-info"></div>
      <div class="question-content">
        <%= question.title %> <br>
        <%= question.content %> <br>
        <%= question.user.name.upcase_first %>
        <%= question.created_at.to_s[0..15] %>
      </div>
    </div>
      <hr>
    <% end %>
  </div>

  <div style="margin-top: 30px;">
    <%= paginate @questions %>
  </div>
</div>